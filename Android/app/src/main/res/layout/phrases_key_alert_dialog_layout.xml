<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/phrasesKeyDisplay"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here are the phrases:\n
        \ncard name ___ => Displays the name and general info of the card\n
        \ncard rules ___ => Displays specific rulings of the card\n
        \ncard set ___ => Displays set information of the card\n
        "
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:background="@drawable/round_corners_alert_dialogs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403"
        />
</androidx.constraintlayout.widget.ConstraintLayout>